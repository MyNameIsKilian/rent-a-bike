
<div>
  <div class="bike-container mt-5 ml-5 mr-5">
    <% @bike.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
    <div class="bike details ml-5">
        <h2><%= @bike.user.first_name %>'s Bike</h2>
        <h5><%= @bike.description %></h5>
        <p><strong>Color</strong> : <%= @bike.color %></p>
        <p><strong>Size </strong>: <%= @bike.size %></p>
        <p><strong>Accessories </strong>: <%= @bike.accessories == "" ? "No accessories" : @bike.accessories %></p>
        <p><strong>Address </strong>: <%= @bike.address %></p>
        <p><strong>Price </strong>: <%= @bike.price %>â‚¬ per day</p>
      <div class = "bike-button">
        <%= link_to "Book", new_bike_booking_path(@bike), class: "btn btn-success mt-2 mr-3"  %>
        <%= link_to "See all bikes", bikes_path, class: "btn btn-outline-secondary mt-2 mr-3" %>
      </div>
    </div>
  </div>

</div>
