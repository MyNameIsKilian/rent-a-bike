<div>
  <h1 class="ml-5 mt-3">Details of my bike</h1>
  <%= link_to "See all my bikes", owner_bikes_path, class: "btn btn-secondary mt-3 ml-5 px-5" %>
  <div class="bike-container mt-5 ml-5 mr-5">
    <% @bike.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
    <div class="bike details ml-5">
        <h2><%= @bike.description %></h2>
        <p><strong>Color</strong> : <%= @bike.color %></p>
        <p><strong>Size </strong>: <%= @bike.size %></p>
        <p><strong>Accessories </strong>: <%= @bike.accessories.nil? ? "No accessories" : @bike.accessories %></p>
        <p><strong>Address </strong>: <%= @bike.address %></p>
        <p><strong>Price </strong>: <%= @bike.price %>â‚¬ per day</p>
      <div class = "bike-button">
        <%= link_to "Delete my bike", owner_bike_path(@bike), method: :delete, data: { confirm: "Do you really want to delete this bike?" }, class: "btn btn-danger mt-2 mr-3" %>
        <%= link_to "Edit my bike", edit_owner_bike_path(@bike), class: "btn btn-success mt-2 mr-3"  %>
      </div>
    </div>
  </div>
</div>

